
<div class="form-horizontal">
  <img src="{{model.book.image}}" height="100" width="80">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title of the Book</label>
    <div class="col-sm-10">
      <label class="col-sm-2 control-label">{{model.book.title}}</label>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Condition of the Book</label>
    <div class="col-sm-10">
      <label class="col-sm-2 control-label">{{model.book.condition}}</label>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Select Person</label>
    <div class="col-md-4">
      {{#paper-autocomplete
        disabled=firstDisabled
        onSelect=(route-action "addBookPerson")
        options=model.people
        allowClear=true
        searchText=(readonly countrySearchText)
        onSearchTextChange=(action (mut countrySearchText))
        selected=selectedPerson
        search=(if simulateQuery (route-action "searchPeople"))
        searchField="name"
        labelPath="name"
        placeholder="Select a Person..."
        loadingMessage="Searching people..."
        noMatchesMessage="Oops this person doesn't exist. Create a new perseon?"
        onSelectionChange=(action (mut selectedPerson)) as |person autocomplete|}}
        {{paper-autocomplete-highlight
          label=person.name
          searchText=autocomplete.searchText
          flags="i"}}
      {{/paper-autocomplete}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    {{#paper-button onClick=(route-action 'addPersonToBook' model) raised= true}}Issue this book to this person{{/paper-button}}
    </div>
  </div>
</div>
