
<div class="form-horizontal">
  <img src="{{model.book.image}}" height="100" width="80">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title of the Book</label>
    <div class="col-sm-10">
      <label class="col-sm-2 control-label">{{model.book.title}}</label>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Condition of the Book</label>
    <div class="col-sm-10">
      <label class="col-sm-2 control-label">{{model.book.condition}}</label>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Select Person</label>
    <div class="col-md-4">
      {{#paper-autocomplete
        disabled=firstDisabled
        onSelect=(route-action "addBookUser")
        options= model.users
        allowClear=true
        searchText=(readonly userSearchText)
        onSearchTextChange=(action (mut userSearchText))
        selected=selectedUser
        search=(if simulateQuery (route-action "searchUsers"))
        searchField="firstname"
        labelPath="firstname"
        placeholder="Select a User..."
        loadingMessage="Searching Users..."
        noMatchesMessage="Oops this user doesn't exist. Create a new perseon?"
        onSelectionChange=(action (mut selectedUser)) as |user autocomplete|}}
        {{paper-autocomplete-highlight
          label=user.firstname
          searchText=autocomplete.searchText
          flags="i"}}
      {{/paper-autocomplete}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    {{#paper-button onClick=(route-action 'addBookUser' model) raised= true}}Issue this book to this person{{/paper-button}}
    </div>
  </div>
</div>
